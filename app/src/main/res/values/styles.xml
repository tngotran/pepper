<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_img_btn_backarrow</item>
    </style>

    <style name="Bubble" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/bubble_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/bubble_padding</item>
    </style>

    <style name="Category" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/category_selector</item>
        <item name="android:padding">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

</resources>
